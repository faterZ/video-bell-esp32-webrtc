    "configurations": [
        {
            "name": "ESP-IDF",
            "includePath": [
                "${workspaceFolder}/**",
                "${env:IDF_PATH}/components/**",
                "${workspaceFolder}/components/**",
                "${workspaceFolder}/managed_components/**",
                // 系统头文件路径（保留你实际存在的路径）
                "F:/ESP-IDF-5.4/Espressif/tools/xtensa-esp-elf/esp-14.2.0_20241119/xtensa-esp-elf/xtensa-esp-elf/include/**",
