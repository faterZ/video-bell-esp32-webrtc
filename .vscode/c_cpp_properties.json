                // 新增：显式添加 ESP-IDF 常用组件路径（解决特定头文件识别）
                "${env:IDF_PATH}/components/esp_system/include/**",  // 解决系统相关宏
                "${env:IDF_PATH}/components/esp_wifi/include/**"     // 解决 Wi-Fi 相关函数（如有）
            ],
            "defines": [
                "ESP_PLATFORM",
                "CONFIG_IDF_TARGET_ESP32S3",
                "__cplusplus=201703L",
